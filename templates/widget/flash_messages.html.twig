{% for msg in app.session.flashBag.get('success') %}
    <div class="container my-2 text-center">
        <div class="card bg-success">
            <div class="card-header text-uppercase font-weight-bold">
                Information
            </div>
            <div class="card-block">
                {{ msg }}
            </div>
        </div>
    </div>
{% endfor %}

