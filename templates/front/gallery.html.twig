{% extends 'front/layout/base.html.twig' %}

{% block title %}Galerie {{ parent() }}{% endblock %}
{% block content %}
    <h2 class="text-uppercase text-center font-weight-bold bg-secondary py-3">les albums</h2>
    <div class="container my-4">
        <div class="row">
            {% for album in albums %}
                    <div class="gallery-album col-6 col-md-3">
                        <div class="card my-3">
                            <a href="{{ path('gallery_by_album', {'albumId': album.id}) }}">
                                <div class="card-body text-center font-weight-bold album">
                                    <p>{{ album.name }}</p>
                                </div>
                            </a>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>

    <h2 class="text-uppercase text-center font-weight-bold bg-secondary py-3">les photos</h2>
    <section style="min-height: 35em">
        <div id="loadingAnimation" class="position-absolute w-100 text-center mt-5">
            <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
            <span class="sr-only">Loading...</span>
        </div>
        <div id="gallery-images" class="position-relative">
            <p class="font-italic text-center mt-5">(Cliquez sur un album pour afficher les photos)</p>
        </div>

    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/galleria/1.5.7/galleria.min.js"></script>
    <script src="{{ asset('js/front/gallery.js') }}"></script>
{% endblock %}