{% extends "front/layout/base.html.twig" %}

{% block title %}AMM Fest 4 {{ parent() }}{% endblock %}
{% block content %}
    <section id="festival_lineup">
        <div class="text-center bg-secondary py-2">
            <h2>{{ "Line-Up"|upper }}</h2>
        </div>
        <div class="row no-gutters">
            {% for artist in artists %}
                <div class="col-6 col-md-4">
                    <div class="artist ">
                        <a href="">
                            <img class="" src="{{ artist.image.url }}" alt="{{ artist.image.alt }}">
                            <div class="artist-infos pl-4 pb-4 text-pink">
                                <h3 class="m-0 font-weight-bold">{{ artist.name }}</h3>
                                <p class="m-0">{{ artist.style }} - {{ artist.origin }}</p>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <section id="festival_infos">
        <div class="text-center bg-secondary py-2">
            <h2>{{ "Infos"|upper }}</h2>
        </div>
        <div class="row my-5">
            <div class="col-12 col-md-6 text-center">
                <div class="row">
                    <div class="col-12">
                        <img class="mw-100" src="holder.js/400x300" alt="">
                    </div>

                    <div class="col-12 text-center pt-4">
                        <button type="button" class="btn btn-lg btn-pink">Google Map</button>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <ul>
                    <li>
                        <h2>Entrée</h2>
                        <p>Ouverture des portes : 14h</p>
                        <p>Pass journée : 13euros</p>
                        <p>*Gratuit pour les moins de 12ans</p>
                    </li>
                    <li>
                        <h2>Le site</h2>
                        <p>Terrain des Archers</p>
                        <p>59114, Steenvoorde</p>
                        <p>Accès : A25, Sortie 13 -> Steenvoorde</p>
                    </li>
                    <li>
                        <h2>Sur place</h2>
                        <p>Coin ciné</p>
                        <p>Camping gratuit</p>
                        <p>Bar</p>
                        <p>Restauration</p>
                    </li>
                </ul
            </div>
        </div>
    </section>
{% endblock %}

