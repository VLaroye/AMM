{% extends "front/layout/base.html.twig" %}

{% block title %}Accueil {{ parent() }}{% endblock %}
{% block content %}

    <section id="homepage_carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="holder.js/800x300?auto=yes&amp;bg=555&amp;fg=333&amp;text=Slide 1" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="holder.js/800x300?auto=yes&amp;bg=555&amp;fg=333&amp;text=Slide 2" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="holder.js/800x300?auto=yes&amp;bg=555&amp;fg=333&amp;text=Slide 3" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#homepage_carousel" role="button" data-slide="prev">
        </a>
        <a class="carousel-control-next" href="#homepage_carousel" role="button" data-slide="next">
        </a>
    </section>

    <section id="homepage_social">
        <div class="row text-center justify-content-center">
            <div class="col-6">
                <div class="row">
                    <div class="col-4 py-5">
                        <i class="fab fa-facebook-square fa-5x"></i>
                    </div>
                    <div class="col-4  py-5">
                        <i class="fab fa-instagram fa-5x"></i>
                    </div>
                    <div class="col-4  py-5">
                        <i class="fab fab fa-twitter-square fa-5x"></i>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <section id="homepage_youtube">
        <div class="d-flex justify-content-center bg-black">
            <iframe  class="my-3" width="700" height="455" src="https://www.youtube.com/embed/h5XKTIZ6nUM" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        </div>
    </section>




{% endblock %}

