{% extends 'admin/layout/admin_base.html.twig' %}

{% block content %}
    <h2 class="text-center">Gestion du diaporama de page d'accueil</h2>
        <div class="row">
            <div class="col-12 col-md-9 order-12 order-md-first">
                {% for image in sliderImages %}
                <div class="card">
                    <div class="card-header">
                        <p>Image <span class="font-weight-bold">{{ image.position }}</span></p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <img class="img-fluid" src="{{ asset('images/uploads/' ~ image.filename) }}" alt="{{ image.alt }}">
                            </div>
                            <div class="col-12">
                                <p>Texte alternatif : {{ image.alt }}</p>
                            </div>
                            <div class="col-12">
                                <a href="{{ path('admin_slider_image_delete', {'sliderId' : slider.id, 'imageId': image.id}) }}"><button class="btn btn-danger">Supprimer</button></a>
                                <a href="{{ path('admin_slider_image_update', {'sliderId' : slider.id, 'imageId': image.id}) }}"><button class="btn btn-primary">Modifier</button></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer"></div>
                </div>
            {% endfor %}
            </div>
            <div class="col-12 col-md-3 order-1">
                <div class="container">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="text-center text-uppercase">Ajouter une image</h5>
                        </div>
                        <div class="card-body">
                            {{ render(controller('App\\Controller\\AdminControllers\\SliderController::sliderImageAdd', {'sliderId' : 1})) }}
                        </div>
                        <div class="card-footer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}


