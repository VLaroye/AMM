{% block content %}
    {{ form_start(form) }}
        {{ form_label(form.file) }}
        {{ form_widget(form.file, {'attr' : {'class' : 'form-control'}}) }}
        {{ form_errors(form.file, {'attr' : {'class' : 'text-danger'}}) }}

        {{ form_label(form.alt) }}
        {{ form_widget(form.alt, {'attr' : {'class' : 'form-control'}}) }}
        {{ form_errors(form.alt, {'attr' : {'class' : 'text-danger'}}) }}

        {{ form_widget(form.submit, {'attr' : {'class' : 'btn btn-dark mt-3'}}) }}
    {{ form_end(form) }}
{% endblock %}