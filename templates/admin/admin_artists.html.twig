{% extends 'admin/layout/admin_base.html.twig' %}

{% block content %}

    {% for artist in artists %}
        <div class="container bg-light my-4">
            <div class="media">
                <div class="admin-artist-img">
                    {% if artist.image is not null %}
                        <img class="align-self-center m-3" src="{{ artist.image.url }}" alt="">
                    {% endif %}
                </div>
                <div class="media-body my-3">
                    <h5 class="mt-0"> {{ artist.name }}</h5>
                    <div class="row">
                        <div class="col-6">
                            <h6>Style</h6>
                            <p>{{ artist.style }}</p>
                        </div>
                        <div class="col-6">
                            <h6>Origine</h6>
                            <p>{{ artist.origin }}</p>
                        </div>
                    </div>
                    <h6>Description</h6>
                    <p>{{ artist.description }}</p>

                    <a href="{{ path('admin_artists_update', {'id' : artist.id}) }}"><button type="button" class="btn btn-primary rounded">Modifier</button></a>
                    <button type="button" class="btn btn-danger rounded" data-toggle="modal" data-target="#deleteConfirm">Supprimer</button>
                </div>
            </div>
        </div>

        <!-- Modal Confirmation Suppression -->
        <div class="modal fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteConfirmLabel">Confirmation de la suppression</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Etes-vous sûr de vouloir supprimer définitivement cet artiste de la liste ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Annuler</button>
                        <a href="{{ path("admin_artists_delete", {'id' : artist.id}) }}"><button type="button" class="btn btn-danger">Confirmer</button></a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}



{% endblock %}